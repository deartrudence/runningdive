
<div class="product col--three {% cycle '','','','last' %}">
  <div class="product-thumb" >
    <a href="{{ product.url | within: collection }}">
      <img src="{{ product.featured_image.src | product_img_url: 'grande' }}" alt="{{ product.featured_image.alt | escape }}" data-adaptive-background data-ab-css-background />
      <div class="overlay hidden">
        <div class="content">
          <h3>VIEW</h3>
        </div>
      </div>
    </a>
    <div class="product-title">
      <a href="{{ product.url | within: collection }}">
          {{ product.title }}
        </a>
    </div>
    <div class="product-price">
      {% if product.price_varies %}From{% endif %}
      {{ product.price | money }}
    </div>
  </div>
</div>


