
<div class="product col--three {% cycle '','','','last' %}">
  <div class="product-thumb" style="background-image: url({{ product.featured_image.src | product_img_url: 'grande' }}); background-repeat: no-repeat;  background-position: center center; background-size:contain; height: 300px; " data-adaptive-background data-ab-css-background>
    <a href="{{ product.url | within: collection }}">
      {% comment %}<img src="{{ product.featured_image.src | product_img_url: 'grande' }}" alt="{{ product.featured_image.alt | escape }}" />{% endcomment %}
      <div class="overlay hidden">
        <div class="content">
          <h3>VIEW</h3>
        </div>
      </div>
    </a>
    <div class="product-title">
      <a href="{{ product.url | within: collection }}">
          {{ product.title }}
        </a>
    </div>
    <div class="product-price">
      {% if product.price_varies %}From{% endif %}
      {{ product.price | money }}
    </div>
  </div>
</div>


